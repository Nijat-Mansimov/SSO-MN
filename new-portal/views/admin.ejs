<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="light-mode">
    <aside class="sidebar">
        <div class="logo-group">
            <h1 class="logo-text">Admin Panel</h1>
        </div>
        <nav class="nav">
            <ul>
                <li class="nav-item" data-section="home">
                    <a href="/" class="nav-button"><i class="fas fa-home"></i>Əsas Səhifə</a>
                </li>
                <li class="nav-item active" data-section="users">
                    <button class="nav-button"><i class="fas fa-users"></i>İstifadəçilər</button>
                </li>
                <li class="nav-item" data-section="services">
                    <button class="nav-button"><i class="fas fa-cogs"></i>Xidmətlər</button>
                </li>
                <li class="nav-item" data-section="user-services">
                    <button class="nav-button"><i class="fas fa-link"></i>İstifadəçi Xidmətləri</button>
                </li>
            </ul>
        </nav>
        <div class="sidebar-bottom">
            <div class="mode-toggle-container">
                <button id="mode-toggle" class="mode-toggle-button">
                    <span class="icon light-icon"><i class="fas fa-sun"></i></span>
                    <span class="icon dark-icon"><i class="fas fa-moon"></i></span>
                </button>
            </div>
            <div class="logout-container">
                <button id="logout-btn" class="logout-button">Çıxış</button>
            </div>
        </div>
    </aside>

    <main class="main-content">
        <header class="header">
            <h1 id="panel-title">İstifadəçilər</h1>
        </header>
        
        <section id="users-section" class="content-section active">
            <div class="actions">
                <button id="add-user-btn" class="add-button"><i class="fas fa-plus"></i>Yeni İstifadəçi</button>
            </div>
            <div class="table-container">
                <table id="users-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>İstifadəçi Adı</th>
                            <th>Email</th>
                            <th>Admin</th>
                            <th>Yaradılış Tarixi</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </section>

        <section id="services-section" class="content-section hidden">
            <div class="actions">
                <button id="add-service-btn" class="add-button"><i class="fas fa-plus"></i>Yeni Xidmət</button>
            </div>
            <div class="table-container">
                <table id="services-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Xidmət Adı</th>
                            <th>Ad</th>
                            <th>URL</th>
                            <th>Təsvir</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </section>

        <section id="user-services-section" class="content-section hidden">
            <div class="actions">
                <button id="assign-service-btn" class="add-button"><i class="fas fa-link"></i>Xidmət Təyin Et</button>
            </div>
            <div class="assignment-form-container hidden">
                <h3>Xidmət Təyin Et</h3>
                <form id="assign-service-form">
                    <div class="form-group">
                        <label for="assign-user-select">İstifadəçi Seçin:</label>
                        <select id="assign-user-select" required></select>
                    </div>
                    <div class="form-group">
                        <label for="assign-services-select">Xidmətləri Seçin:</label>
                        <select id="assign-services-select" multiple required></select>
                        <small>Ctrl (Windows) / Cmd (Mac) basılı saxlayaraq çoxsaylı seçim edin.</small>
                    </div>
                    <button type="submit">Təyin Et</button>
                    <button type="button" class="cancel-button">Ləğv Et</button>
                </form>
            </div>
            <div class="table-container">
                <table id="user-services-table">
                    <thead>
                        <tr>
                            <th>İstifadəçi ID</th>
                            <th>İstifadəçi Adı</th>
                            <th>Xidmət ID</th>
                            <th>Xidmət Adı</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </section>

    </main>

    <div id="modal" class="modal hidden">
        <div class="modal-content" id="modal-content">
            <span class="close-button">&times;</span>
            <h2 id="modal-title"></h2>
            <form id="user-form" class="hidden">
                <div class="form-group">
                    <label for="username">İstifadəçi Adı:</label>
                    <input type="text" id="username" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email">
                </div>
                <div class="form-group">
                    <label for="password">Şifrə:</label>
                    <input type="password" id="password" required>
                </div>
                <div class="form-group checkbox-group">
                    <input type="checkbox" id="isAdmin">
                    <label for="isAdmin">Admin</label>
                </div>
                <button type="submit" class="submit-button"></button>
            </form>

            <form id="service-form" class="hidden">
                <div class="form-group">
                    <label for="service_name">Xidmət Adı (System adı):</label>
                    <input type="text" id="service_name" required>
                </div>
                <div class="form-group">
                    <label for="name">Ad (Display adı):</label>
                    <input type="text" id="name" required>
                </div>
                <div class="form-group">
                    <label for="url">URL (API endpoint):</label>
                    <input type="text" id="url" required>
                </div>
                <div class="form-group">
                    <label for="description">Təsvir:</label>
                    <textarea id="description"></textarea>
                </div>
                <button type="submit" class="submit-button"></button>
            </form>
        </div>
    </div>

    <div id="notification" class="notification hidden"></div>
<script>
    // Serverdən gələn .env dəyişəni
    const PORTAL_API = "<%= PORTAL_API %>";
    const KOMEKCI_SISTEMI_API = "<%= KOMEKCI_SISTEMI_API %>";
</script>
    <script src="/js/admin.js"></script>
</body>
</html>